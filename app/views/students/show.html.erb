<div class="page-title-row">
    <div class="add-button"><%= link_to 'EDIT', edit_student_path(@student) %>&nbsp;<i class="fas fa-user-edit"></i> </div>
    <div><h2>STUDENT PROFILE</h2></div>
    <div class="add-button"><%= link_to 'LIST', students_path %>&nbsp;<i class="fas fa-list-alt"></i></div>
</div>

<div class="edit-page">
  <p id="notice"><%= notice %></p>
  <div class="show-page">

    <div class="show-inner">
      <h2><%= @student.first_name.upcase %> <%= @student.last_name.upcase %>
      </h2>
      <div class="bar"></div>
      <p>
        <strong>Age:</strong>
        <%= @student.age %>
      </p>

      <p>
        <strong>Degree:</strong>
        <%= @student.education_level %>
      </p>
      <div class="bar"></div>
      <p>
        <strong>Current Class List:</strong><br>
        <% @student.cohorts.uniq.each do |x| %>
        <%= link_to "#{x.name}", cohort_path(x.id) %><br>
        <% end %>
      </p>
      </div>
      <div class="show-inner">

      <h2>ADD TO CLASS:</h2>
      <%= form_tag({controller: "students", action: "update"}, method: "get") %>
      <div class="form-row">
        <div class ="form-symbol"><i class="fas fa-chalkboard"></i></div>
        <div><%= collection_select(:q, :q, Cohort.all, :id, :name ) %></div>
      </div>
      <%= submit_tag("ADD COURSE") %>

    </div>

  </div>

</div>
