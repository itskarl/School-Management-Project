<p id="notice"><%= notice %></p>

<p>
  <strong>Cohort Name:</strong>
  <%= @cohort.name %>
</p>

<p>
  <strong>COURSE:</strong>
  <%=  Course.find_by_id(@cohort.course).name %>
</p>

<p>
  <strong>START:</strong>
  <%= @cohort.start_date %>
</p>


<p>
  <strong>END:</strong>
  <%= @cohort.end_date %>
</p>

<p>
  <strong>STUDENTS</strong>
  <% @cohort.students.each do |z| %>
  <%= z.first_name %>
  <br>
  <% end %>
</p>

<h1>add cohorts</h1>
<%= form_for @cohort do |f| %>
<%= f.collection_select(:student_ids, Student.all, :id, :first_name) %>
<%= submit_tag("ADD student") %>
<% end %>


<%= link_to 'Edit', edit_cohort_path(@cohort) %> |
<%= link_to 'Back', cohorts_path %>
