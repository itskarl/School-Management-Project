<%= form_for @course do |form| %>
<% if course.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(course.errors.count, "error") %>
      prohibited this course from being saved:</h2>

    <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-row">
  <div class="form-symbol"><i class="fas fa-pen"></i></div>
  <%= form.text_field :name, placeholder: "COURSE NAME" %>
</div>

<div>COURSE HOURS</div>
<div class="form-row">
  <div class="form-symbol"><i class="fas fa-clock"></i></div>
  <%= form.number_field :hours, placeholder: "COURSE HOURS"  %>
</div>

<div class="form-row">
  <%= form.submit %>
</div>
<% end %>
