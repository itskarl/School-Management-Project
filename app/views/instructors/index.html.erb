<p id="notice"><%= notice %></p>

<h1>INSTRUCTORS LIST</h1>

<div class="instructor-list-grid">

  <div class="title-row">
    <%= link_to "FIRST NAME", :controller => "instructors", :sort => "first_name" %>
  </div>
  <div class="title-row">
    <%= link_to "LAST NAME", :controller => "instructors", :sort => "last_name" %>
  </div>
  <div class="title-row">
    <%= link_to "AGE", :controller => "instructors", :sort => "age" %>
  </div>
  <div class="title-row">
    <%= link_to "EDUCATION LEVEL", :controller => "instructors", :sort => "education_level" %>
  </div>
  <div class="title-row">
    <%= link_to "SALARY", :controller => "instructors", :sort => "salary" %>
  </div>
  <div class="title-row">
    <b>ACTIONS</b>
  </div>

  <% @instructors.each do |instructor| %>

    <div><%= instructor.first_name %></div>
    <div><%= instructor.last_name %></div>
    <div><%= instructor.age %></div>
    <div><%= instructor.education_level%></div>

    <div><%= number_to_currency(instructor.salary) %></div>
    <div><%= link_to instructor do %>
      SHOW
    <% end %>
&nbsp;
    <%= link_to edit_instructor_path(instructor) do %>
    EDIT
    <% end %>
&nbsp;
    <%= link_to instructor, method: :delete, data: { confirm: 'Are you certain? This action is irreversible' } do %>
    DELETE
    <% end %>
    </div>

<% end %>
  </div>
<p><%= link_to 'New User', new_instructor_path %></p>
