<%= form_for @user do |form| %>
<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %>
      prohibited this user from being saved:</h2>
    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  <% end %>

  <%= form.text_field :first_name, placeholder: "FIRST NAME" %>

  <%= form.text_field :last_name, placeholder: "LAST NAME" %>

  <%= form.text_field :email, placeholder: "EMAIL" %>

  <%= form.password_field :password, placeholder: "PASSWORD" %>
<div class="form-row">
  <div><%= form.label :ADMIN? %></div>
  <div><%= form.label :admin %></div>
</div>

<div class="form-row">
  <div><%= form.label :STUDENT? %></div>
  <div><%= form.check_box :student %></div>
</div>

<div class="form-row">
  <div><%= form.label :INSTRUCTOR? %></div>
  <div><%= form.check_box :instructor %></div>
</div>

  <%= form.label :photo, "Submit your photo."  %><br>
  <%= form.file_field :photo %><br>


    <%= form.submit %>

  <% end %>
