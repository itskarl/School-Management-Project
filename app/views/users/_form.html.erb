<%= form_for @user do |form| %>
<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %>
      prohibited this user from being saved:</h2>

    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  <% end %>

  <%= form.text_field :first_name, placeholder: "FIRST NAME" %>

  <%= form.text_field :last_name, placeholder: "LAST NAME" %>

  <%= form.text_field :email, placeholder: "EMAIL" %>

  <%= form.text_field :password, placeholder: "PASSWORD" %>

  <%= form.label :admin %>
  <%= form.check_box :admin %>

  <%= form.label :student %>
  <%= form.check_box :student %>

  <%= form.label :instructor %>
  <%= form.check_box :instructor %>


    <%= form.submit %>

  <% end %>
